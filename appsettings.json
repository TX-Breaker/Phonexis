{
  "AppSettings": {
    "Name": "Phonexis",
    "Version": "1.0.0",
    "Organization": "TX-Breaker"
  },
  "YouTube": {
    "ApiBaseUrl": "https://www.googleapis.com/youtube/v3/search",
    "MaxDailyQuotaPerKey": 10000,
    "DefaultMaxResults": 5,
    "RequestTimeoutSeconds": 30
  },
  "Database": {
    "MaxCacheSize": 500,
    "ConnectionTimeoutSeconds": 30,
    "CommandTimeoutSeconds": 60
  },
  "AutoSave": {
    "IntervalSeconds": 30,
    "MaxBackupCount": 10,
    "BackupBeforeCriticalOperations": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Phonexis": "Debug",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "Console": {
      "IncludeScopes": false,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss"
    },
    "File": {
      "Path": "Logs/phonexis.log",
      "MaxFileSizeMB": 10,
      "MaxFiles": 5
    }
  },
  "UI": {
    "DefaultLanguage": "en",
    "SupportedLanguages": [ "en", "it", "fr", "es" ],
    "AutoSaveVisualFeedback": true,
    "SearchResultsPerPage": 10
  },
  "Security": {
    "ApiKeyEncryption": {
      "Salt": "PhonexisSecureSalt2024",
      "KeyDerivationIterations": 10000
    }
  }
}